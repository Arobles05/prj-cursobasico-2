<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arobles.proyecto_final_modulo_1.TazadorActivity"
    android:weightSum="1">


    <TextView
        android:layout_width="306dp"
        android:textColor="@android:color/primary_text_dark"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Title_1"
        android:id="@+id/Txt1"
        android:layout_weight=".89"
        android:editable="false"
        android:gravity="center_horizontal"

        android:layout_row="0"
        android:layout_column="3" />

    <TextView
        android:textColor="@android:color/primary_text_dark"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Title_2"
        android:id="@+id/txt2"
        android:layout_row="7"
        android:layout_column="3"
        android:gravity="center" />

    <Spinner
        android:layout_width="231dp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:id="@+id/mSpinner1Tazador"
        android:entries="@array/Listas_Tasas"
        android:layout_row="9"
        android:layout_column="3"
        android:spinnerMode="dialog"
        android:layout_gravity="left|top|center" />

    <Spinner
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:id="@+id/mSpinner2Tazador"
        android:entries="@array/Listas_Tasas"
        android:layout_row="10"
        android:layout_column="3"
        style="@style/CustomSpinner"
        android:spinnerMode="dialog" />

    <LinearLayout android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_row="11"
        android:layout_column="3"
        android:layout_height="85dp">

        <TextView
            android:textColor="@android:color/primary_text_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Title_3"
            android:id="@+id/Txt33"
            android:layout_weight="0.89"
            android:editable="false"
            android:gravity="left"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginRight="15dp" />

        <EditText
            android:textColor="#0d0d0d"
            android:maxLength="6"
            android:layout_width="102dp"
            android:layout_height="34dp"
            android:id="@+id/editTextCantidadId"
            android:background="#fcf8f8" />

    </LinearLayout>

    <Button
        android:id="@+id/btnConversorId"
        android:text="@string/Title_4"
        android:layout_column="3"
        android:layout_row="12"
        android:layout_marginLeft="2dp"
        android:layout_width="330dp"
        android:layout_height="61dp"
        android:background="#f7faf6"
        android:textColor="#2527c2"
        android:textSize="24dp" />

    <TextView
        android:textColor="#101797"
       android:background="#f4bf7b"
        android:layout_marginTop="30dp"
        android:text="@string/Title_5"
        android:id="@+id/displayResultId"
        android:layout_width="337dp"
        android:layout_height="65dp"
        android:layout_row="14"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_column="3"

        />

</GridLayout>
